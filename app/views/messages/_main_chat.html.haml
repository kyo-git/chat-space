.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      %h2.chat-main__group-info__left-box__current-group
        test
      %ul.chat-main__group-info__left-box__member-list
        Member: 
        %li.chat-main__group-info__left-box__member-list__member
          masa
    .chat-main__group-info__edit-btn
      = link_to "#" do
        Edit
  .chat-main__message-list
    .chat-main__message-list__upper-info
      %p.chat-main__message-list__upper-info__talker
        talker
      %p.chat-main__message-list__upper-info__date
        date
    %p.chat-main__message-list__text
      text
  .chat-main__message-form
    %form.new_message
      .input-box
        %input{type: "text", class: "input-box__text", placeholder: "type a message"}
        %label{class: "input-box__image"}
          =icon('fas', 'image')
          %input{type: "file", class: "input-box__image__file"}
      %input{type: "submit", class: "submit-btn"}